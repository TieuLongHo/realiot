{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "intro": {
      "type": "string",
      "description": "Introduction to the project."
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard"]
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": ["name"]
      },
      "minItems": 1
    },
    "story": {
      "type": "string",
      "description": "Background story for the project."
    },
    "user_input": {
      "type": "object",
      "properties": {
        "buttons": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "topic": {
                "type": "string"
              }
            },
            "required": ["label", "topic"]
          }
        },
        "sliders": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "topic": {
                "type": "string"
              }
            },
            "required": ["label", "topic"]
          }
        },
        "graphs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "topic": {
                "type": "string"
              }
            },
            "required": ["label", "topic"]
          }
        },
        "displays": {
          "type": "array",
          "items": {}
        }
      }
    },
    "solution": {
      "type": "object"
    }
  },
  "required": ["id", "title", "intro", "difficulty", "components", "story", "user_input", "solution"]
}